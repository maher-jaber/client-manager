{% extends 'base.html.twig' %}

{% block title %}Historique des Actions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f7fa;
        }
        .table > thead {
            background-color: #0d6efd;
            color: white;
        }
        .badge {
            font-size: 0.85rem;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'layout.html.twig' %}

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Historique des Actions</h1>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="width: 15%">Date</th>
                                <th style="width: 15%">Auteur</th>
                                <th style="width: 30%">Clients</th>
                                <th style="width: 30%">Actions</th>
                                <th style="width: 10%">Note</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for log in client_action_logs %}
                            <tr>
                                <td>{{ log.performedAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <i class="bi bi-person-circle me-1"></i>
                                    {{ log.performedBy ?? 'Inconnu' }}
                                </td>
                                <td>
                                    {% for client in log.clients %}
                                        <span class="badge bg-primary mb-1">{{ client.nomClient }}</span>
                                    {% else %}
                                        <span class="text-muted">Aucun</span>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for action in log.actions %}
                                        <span class="badge bg-info text-dark mb-1">{{ action.label }}</span>
                                    {% else %}
                                        <span class="text-muted">Aucune</span>
                                    {% endfor %}
                                </td>
                                <td>{{ log.note }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Aucun log disponible.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-center mt-3">
    {{ knp_pagination_render(client_action_logs) }}
</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
