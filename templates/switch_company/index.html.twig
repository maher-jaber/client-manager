{% extends 'base.html.twig' %}

{% block title %}Choix société{% endblock %}

{% block body %}
	{% include 'layout-global.html.twig' %}

	<style>
		.card-entity {
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}
		.card-entity:hover {
			transform: translateY(-5px);
			box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.3);
		}
		.card-img-top {
			max-height: 150px;
			width: auto;
			object-fit: contain;
		}
		.full-height-center {
			min-height: 100vh;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	</style>

	<div class="container full-height-center">
		<div class="card shadow-lg border-0 w-100" style="max-width: 900px;">
			<div class="card-header bg-primary text-white text-center py-5">
				<h2 class="mb-2">Bienvenue</h2>
				<p class="mb-0">Veuillez choisir une entité</p>
			</div>

			<div class="card-body text-center">
				<form method="post" action="{{ path('switch_company_select') }}">
					<div class="row justify-content-center p-4">
						<div class="col-md-5 m-3">
							<div class="card h-100 border-0 shadow-sm card-entity">
								<img src="{{ asset('images/altra.png') }}" class="card-img-top p-4 mx-auto" alt="Altra">
								<div class="card-body">
									<button type="submit" name="company" value="altra" class="btn w-100" style="background-color: #FED453; color: #000; font-weight: 600;">
										<i class="bi bi-building me-1"></i>
										Accéder à Altra
									</button>
								</div>
							</div>
						</div>

						<div class="col-md-5 m-3">
							<div class="card h-100 border-0 shadow-sm card-entity">
								<img src="{{ asset('images/ids.png') }}" class="card-img-top p-4 mx-auto" alt="IDS">
								<div class="card-body">
									<button type="submit" name="company" value="ids" class="btn w-100" style="background-color: #499FBD; color: #fff; font-weight: 600;">
										<i class="bi bi-building me-1"></i>
										Accéder à IDS
									</button>
								</div>
							</div>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
