{% extends 'base.html.twig' %}

{% block title %}Choix société
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background: linear-gradient(135deg, #0d47a1 0%, #1976d2 100%);
			background-image: url('{{ asset("images/bg-texture.jpg") }}');
			background-repeat: no-repeat;
			background-size: cover;
			background-position: center;
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.card-entity {
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

		.card-entity:hover {
			transform: translateY(-5px);
			box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.3);
		}

		.card-img-top {
			max-height: 150px;
			width: auto;
			object-fit: contain;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card shadow-lg border-0">
			<div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-4">
				<div>
					<h2 class="mb-0">Bienvenue</h2>
					<p class="mb-0">Veuillez choisir une entité</p>
				</div>
				<a href="{{ path('app_logout') }}" class="btn btn-outline-light">
					<i class="bi bi-box-arrow-right me-1"></i>
					Déconnexion
				</a>
			</div>
            <div class="card-bodytext-center">
			<form method="post" action="{{ path('switch_company_select') }}">
				<div style="padding:50px" class="row justify-content-center">
					<div class="col-md-5 m-3">
						<div class="card h-100 border-0 shadow-sm card-entity">
							<img src="{{ asset('images/altra.png') }}" class="card-img-top p-4 mx-auto" alt="Altra">
							<div class="card-body">
								<button type="submit" name="company" value="altra" class="btn w-100" style="background-color: #FED453; color: #000; font-weight: 600;">
									<i class="bi bi-building me-1"></i>
									Accéder à Altra
								</button>
							</div>
						</div>
					</div>

					<div class="col-md-5 m-3">
						<div class="card h-100 border-0 shadow-sm card-entity">
							<img src="{{ asset('images/ids.png') }}" class="card-img-top p-4 mx-auto" alt="IDS">
							<div class="card-body">
								<button type="submit" name="company" value="ids" class="btn w-100" style="background-color: #499FBD; color: #fff; font-weight: 600;">
									<i class="bi bi-building me-1"></i>
									Accéder à IDS
								</button>
							</div>
						</div>
					</div>


				</div>
			</form>
		</div>
	</div>
</div>{% endblock %}
