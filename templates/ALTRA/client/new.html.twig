{% extends 'base.html.twig' %}

{% block title %}Nouveau Client{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-form {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }
        .form-header {
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .required-field::after {
            content: " *";
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
{% include 'layout-altra.html.twig' %}
<div class="container-fluid">
    <div class="row">
        <main class="col-md-12 ms-sm-auto px-md-4">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Création d'un nouveau client</h1>
                <a href="{{ path('app_client_index_altra') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="card card-form shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="form-header mb-4">
                        <h3 class="h4 text-primary">
                            <i class="bi bi-person-plus me-2"></i>Nouvelle fiche client
                        </h3>
                        <p class="text-muted">Remplissez les informations ci-dessous pour créer un nouveau client</p>
                    </div>

                    {{ include('ALTRA/client/_form.html.twig', {'button_label': 'Créer le client'}) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Vous pouvez ajouter des scripts JavaScript spécifiques ici si nécessaire
    </script>
{% endblock %}