{% extends 'base.html.twig' %}

{% block title %}Modifier Client{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f7fa;
        }
        .card-form {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .action-buttons {
            margin-top: 2rem;
        }
    </style>
{% endblock %}

{% block body %}
{% include 'layout-altra.html.twig' %}
<div class="container-fluid">
    <div class="row">
        <main class="col-md-12 ms-sm-auto px-md-4">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Modifier le client</h1>
                <a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="card card-form shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="form-header mb-4">
                        <h3 class="h4">Informations du client</h3>
                        <p class="text-muted">Modifiez les détails du client ci-dessous</p>
                    </div>

                    {{ include('ALTRA/client/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                    
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Vous pouvez ajouter des scripts JavaScript spécifiques ici si nécessaire
    </script>
{% endblock %}