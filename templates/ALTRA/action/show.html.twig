{% extends 'base.html.twig' %}

{% block title %}Détails de l'action{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-action {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }
    </style>
{% endblock %}

{% block body %}
{% include 'layout-altra.html.twig' %}

<div class="container py-4">
    <div class="card card-action">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Détails de l'action</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Identifiant</dt>
                <dd class="col-sm-9">{{ action.id }}</dd>

                <dt class="col-sm-3 fw-semibold">Label</dt>
                <dd class="col-sm-9">{{ action.label }}</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_action_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
            </a>

            <div>
                <a href="{{ path('app_action_edit', {'id': action.id}) }}" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square me-1"></i> Modifier
                </a>

              
            </div>
        </div>
    </div>
</div>
{% endblock %}
