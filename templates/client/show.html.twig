{# templates/client/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du client - {{ client.nomClient }}{% endblock %}





{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-form {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }
        .form-header {
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .required-field::after {
            content: " *";
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
{% include 'layout.html.twig' %}
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Détails du client</h3>
        </div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Informations client</h5>
                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Nom du client</dt>
                        <dd class="col-sm-8">{{ client.nomClient }}</dd>

                        <dt class="col-sm-4 fw-semibold">Commercial</dt>
                        <dd class="col-sm-8">{{ client.commercial ?: '—' }}</dd>

                        <dt class="col-sm-4 fw-semibold">Numéro client</dt>
                        <dd class="col-sm-8">{{ client.numeroClient ?: '—' }}</dd>

                        <dt class="col-sm-4 fw-semibold">Téléphone cabinet</dt>
                        <dd class="col-sm-8">{{ client.telephoneCabinet ?: '—' }}</dd>

                        <dt class="col-sm-4 fw-semibold">GSM praticien</dt>
                        <dd class="col-sm-8">{{ client.gsmPraticien ?: '—' }}</dd>

                        <dt class="col-sm-4 fw-semibold">Email</dt>
                        <dd class="col-sm-8">{{ client.email ?: '—' }}</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Détails du contrat</h5>
                    <dl class="row">
                        <dt class="col-sm-5 fw-semibold">Numéro de contrat</dt>
                        <dd class="col-sm-7">{{ client.numeroContrat ?: '—' }}</dd>

                        <dt class="col-sm-5 fw-semibold">Date proposition</dt>
                        <dd class="col-sm-7">{{ client.dateProposition ? client.dateProposition|date('d/m/Y') : '—' }}</dd>

                        <dt class="col-sm-5 fw-semibold">Démarrage contrat</dt>
                        <dd class="col-sm-7">{{ client.demarrageContrat ? client.demarrageContrat|date('d/m/Y') : '—' }}</dd>

                        <dt class="col-sm-5 fw-semibold">Première facturation</dt>
                        <dd class="col-sm-7">{{ client.premiereFacturation ? client.premiereFacturation|date('d/m/Y') : '—' }}</dd>

                        <dt class="col-sm-5 fw-semibold">Accord signé</dt>
                        <dd class="col-sm-7">
                            {% if client.accordSigne %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5 fw-semibold">Refusé</dt>
                        <dd class="col-sm-7">
                            {% if client.refuse %}
                                <span class="badge bg-danger">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a href="{{ referer }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
