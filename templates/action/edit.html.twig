{% extends 'base.html.twig' %}

{% block title %}Modifier action{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-form {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }
        .form-header {
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .required-field::after {
            content: " *";
            color: red;
        }
    </style>
{% endblock %}
{% block body %}
{% include 'layout.html.twig' %}
<div class="container mt-4">

    <h1 class="mb-4">
        <i class="bi bi-pencil-square me-1"></i> Modifier l’action
    </h1>

    {{ include('action/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_action_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
        </a>

       
    </div>
</div>
{% endblock %}

