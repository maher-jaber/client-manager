{% extends 'base.html.twig' %}

{% block title %}Liste des Actions{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<style>
		body {
			background-color: #f8f9fa;
		}
		.table > thead {
			background-color: #0d6efd;
			color: white;
		}
		.card-header h5 {
			margin-bottom: 0;
		}
	</style>
{% endblock %}

{% block body %}
	{% include 'layout.html.twig' %}

	<div class="container mt-4">
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h1 class="h3">Liste des actions</h1>
			<a href="{{ path('app_action_new') }}" class="btn btn-primary">
				<i class="bi bi-plus-circle me-1"></i> Nouvelle action
			</a>
		</div>

		<div class="card shadow-sm">
			<div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Actions disponibles</h5>
			</div>
			<div class="card-body p-0">
				<div class="table-responsive">
					<table class="table table-hover mb-0">
						<thead>
							<tr>
								<th style="width: 10%">ID</th>
								<th>
									{% include 'pagination/_sortable_link.html.twig' with {
										title: 'Label',
										sort: 'a.label',
										sortFieldParameterName: 'sort',
										sortDirectionParameterName: 'direction'
									} %}
								</th>
								<th style="width: 20%">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for action in pagination %}
								<tr>
									<td>{{ action.id }}</td>
									<td>{{ action.label }}</td>
									<td>
										<a href="{{ path('app_action_show', {'id': action.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
											<i class="bi bi-eye"></i>
										</a>
										<a href="{{ path('app_action_edit', {'id': action.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
											<i class="bi bi-pencil"></i>
										</a>

										<button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ action.id }}" title="Supprimer">
											<i class="bi bi-trash"></i>
										</button>

										<!-- Modal suppression -->
										<div class="modal fade" id="deleteModal{{ action.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ action.id }}" aria-hidden="true">
											<div class="modal-dialog modal-dialog-centered">
												<div class="modal-content">
													<div class="modal-header bg-danger text-white">
														<h5 class="modal-title" id="deleteModalLabel{{ action.id }}">Confirmer la suppression</h5>
														<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
													</div>
													<div class="modal-body">
														Êtes-vous sûr de vouloir supprimer l’action <strong>{{ action.label }}</strong> ?
													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
														<form method="post" action="{{ path('app_action_delete', {'id': action.id}) }}">
															<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
															<button type="submit" class="btn btn-danger">Supprimer</button>
														</form>
													</div>
												</div>
											</div>
										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3" class="text-center text-muted">Aucune action trouvée.</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="d-flex justify-content-center my-3">
					{{ knp_pagination_render(pagination) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
